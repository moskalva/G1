{
    "version": "2.0.0",
    "tasks": [
        {
            "label": ".NET Core Test with debugger",
            "type": "process",
            "isBackground": true,
            "command": "dotnet",
            "args": [
                "test"
            ],
            "options": {
                "cwd": "${workspaceFolder}/G1.Tests",
                "env": {
                    "VSTEST_HOST_DEBUG": "1"
                }
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Start Local Server",
            "type": "process",
            "isBackground": true,
            "command": "dotnet",
            "args": [
                "run"
            ],
            "options": {
                "cwd": "${workspaceFolder}/G1.Server"
            },
            "problemMatcher": []
        }
    ]
}